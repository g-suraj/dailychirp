---
import Header from "../components/Header.astro";

const todaysIndex = 0;
let data = await fetch(
  "https://g-suraj.github.io/xeno-canto-processed/pickled_data.json",
);
let birds = await data.json();
const {
  scientificName,
  higherClassification,
  kingdom,
  phylum,
  class: speciesClass,
  order,
  family,
  genus,
  vernacularName,
  _pictures,
  _occurrences,
} = birds[0];

let imageStyle = "filter: blur(15px)";
---

<html>
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link rel="icon" type="image/svg+xml" href="/favicon.ico" />
    <meta name="generator" content={Astro.generator} />
    <title>Daily Chirp</title>
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bulma@0.9.4/css/bulma.min.css"
    />
  </head>

  <Header />

  <body>
    <section class="section">
      <div class="columns is-centered is-multiline is-mobile">
        <div class="column is-full has-text-centered">
          <div class="title is-4">What's the birdsong?</div>
        </div>

        <div class="column is-full has-text-centered">
          <div style="width: 30%;margin: 0 auto;">
            <div class="image is-square" style="">
              <img src={_pictures[2]} style={imageStyle} />
            </div>
          </div>
        </div>

        <div class="column is-narrow has-text-centered">
          <audio
            controls
            style="width: inherit;"
            src={_occurrences[0]["__birdsong"]}></audio>
        </div>

        <div class="column is-full has-text-centered">
          <div class="buttons is-centered">
            <button class="button">One</button>
            <button class="button">Two</button>
            <button class="button">Three</button>
            <button class="button">Four</button>
          </div>
        </div>
      </div>
    </section>
  </body>


</html>
